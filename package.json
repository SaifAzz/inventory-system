    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "nest-commander": "^3.17.0",
    "nestjs-command": "^3.1.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.22",
    "uuid": "^11.1.0"
